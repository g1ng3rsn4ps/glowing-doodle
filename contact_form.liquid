{% form 'contact', id: 'contact' %}

{% style %}
form {
  display: flex;
  flex-direction: column;
  max-width: 500px;
  margin: auto;
}

label {
  margin: 10px 0 5px;
}

input, textarea {
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  background-color: #3d081b;
  color: white;
  padding: 10px;
  border: none;
  border-radius: 100px;
  cursor: pointer;
}

button:hover {
  background-color: #707070;
}
{% endstyle %}

<div>
  <label for="first-name">First Name</label>
  <input type="text" name="contact[first_name]" id="first-name" required>
</div>

<div>
  <label for="last-name">Last Name</label>
  <input type="text" name="contact[last_name]" id="last-name" required>
</div>

<div>
  <label for="email">Email</label>
  <input type="email" name="contact[email]" id="email" required>
</div>

<div>
  <label for="company">Company</label>
  <input type="text" name="contact[company]" id="company" required>
</div>

<div>
  <label for="address1">Street Address</label>
  <input type="text" name="contact[address1]" id="address1">
</div>

<div>
  <label for="address2">Address Line 2</label>
  <input type="text" name="contact[address2]" id="address2">
</div>

<div>
  <label for="city">City</label>
  <input type="text" name="contact[city]" id="city">
</div>

<div>
  <label for="zip">Postal / Zip Code</label>
  <input type="text" name="contact[zip]" id="zip">
</div>

<div>
  <label for="country">Country</label>
  <input type="text" name="contact[country]" id="country">
</div>

<div>
  <label for="message">What products or services are you interested in?</label>
  <textarea name="contact[body]" id="message" rows="4"></textarea>
</div>

<button type="submit">Get in touch!</button>

{% if form.errors %}
  {{ form.errors }}
{% endif %}

{% if form.posted_successfully? %}
  <p>Thanks! Your message has been sent.</p>
{% endif %}

{% endform %}
